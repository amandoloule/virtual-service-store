<div class="data-form">
  <form action="/users/create" method="post">
    <h2>Criar um novo usuário:</h2>
    <div class="form-group">
      <label for="inputFirstName">Primeiro Nome</label>
      <input type="text" name="first" id="inputFirstName" class="form-control" placeholder="Primeiro" autofocus>
    </div>
    <div class="form-group">
      <label for="inputLastName">Último Nome</label>
      <input type="text" name="last" id="inputLastName" class="form-control" placeholder="Último">
    </div>
    <div class="form-group">
      <label for="inputPassword">Senha</label>
      <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Senha" required>
    </div>
    <div class="form-group">
      <label for="inputEmail">E-mail</label>
      <input type="email" name="email" id="inputEmail" class="form-control" placeholder="E-mail" required>
    </div>
    <div class="form-group">
      <label for="inputZipCode">CEP</label>
      <input type="text" name="zipCode" id="inputZipCode" pattern="[0-9]{8}" class="form-control" placeholder="CEP" required>
    </div>
    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
  </form>
</div>
