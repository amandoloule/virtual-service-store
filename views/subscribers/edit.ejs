<div class="data-form">
  <form action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>" method="post">
    <h2>Editar inscrito:</h2>
    <div class="form-group">
      <label for="inputName">Nome</label>
      <input type="text" name="name" id="inputName" class="form-control" value="<%= subscriber.name %>" placeholder="Nome" autofocus>
    </div>
    <div class="form-group">
      <label for="inputEmail">E-mail</label>
      <input type="email" name="email" id="inputEmail" class="form-control" value="<%= subscriber.email %>" placeholder="E-mail" required>
    </div>
    <div class="form-group">
      <label for="inputZipCode">CEP</label>
      <input type="text" name="zipCode" id="inputZipCode" pattern="[0-9]{8}" class="form-control" value="<%= subscriber.zipCode %>" placeholder="CEP" required>
    </div>
    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
  </form>
</div>
