<% if (!currentUser || currentUser.accountType !== 'admin') { %>
  <div class="alert alert-danger">
    É necessário ser um usuário administrador para acessar esta página.
  </div>
<% } else { %>

<div class="data-form">
  <form action="<%=`/services/${service._id}/update?_method=PUT`%>" method="post">
    <h2>Editar serviço:</h2>
    <div class="form-group">
      <label for="inputTitle">Título</label>
      <input type="text" name="title" id="inputTitle" class="form-control" value="<%= service.title %>" placeholder="Título" autofocus>
    </div>
    <div class="form-group">
      <label for="inputDescription">Descrição</label>
      <input type="text" name="description" id="inputDescription" class="form-control" value="<%= service.description %>" placeholder="Descrição">
    </div>
    <div class="form-group">
      <label for="inputCost">Valor</label>
      <input type="text" name="cost" id="inputCost" pattern="\d*" class="form-control" value="<%= service.cost %>" placeholder="Valor" required>
    </div>
    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
  </form>
</div>

<% } %> 
