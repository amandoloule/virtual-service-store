<h2>Dados do serviço
  <%= service.title %>
</h2>
<table class="table table-striped table-borderless">
  <tr>
    <th>Título</th>
    <td>
      <%= service.title %>
    </td>
  </tr>
  <tr>
    <th>Descrição</th>
    <td>
      <%= service.description %>
    </td>
  </tr>
  <tr>
    <th>Valor</th>
    <td>$
      <%= service.cost %>
    </td>
  </tr>
</table>
<div>
  <a class="button" href="<%=`/services/${service._id}/edit`%>">
    Editar detalhes do serviço
  </a>
</div>
<div>
  <a class="button" href="<%= `/services/${service._id}/delete?_method=DELETE` %>"
    onclick="return confirm('Você tem certeza que quer deletar esse serviço?')" a>
    Deletar
  </a>
</div>
<div>
  <a class="button" href="/services">Ver todos os serviços</a>
</div>
