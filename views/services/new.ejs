<div class="data-form">
  <form action="/services/create" method="post">
    <h2>Criar um novo serviço:</h2>
    <div class="form-group">
      <label for="inputTitle">Título</label>
      <input type="text" name="title" id="inputTitle" class="form-control" placeholder="Título" autofocus>
    </div>
    <div class="form-group">
      <label for="inputDescription">Descrição</label>
      <input type="text" name="description" id="inputDescription" class="form-control" placeholder="Descrição">
    </div>
    <div class="form-group">
      <label for="inputCost">Valor</label>
      <input type="text" name="cost" id="inputCost" pattern="\d*" class="form-control" placeholder="Valor" required>
    </div>
    <br /><button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
  </form>
</div>
